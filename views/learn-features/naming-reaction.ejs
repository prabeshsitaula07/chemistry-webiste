<%- include('../header.ejs', {title: 'Naming Reaction'}) %>
<style>
    .card{
        height: fit-content;
    }

    .card-body h5 a{
        color: red;
    }
    .back-btn img {
            height: 40px;
            margin: 20px;
        }

