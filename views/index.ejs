    <style>
        .home {
            min-height: 100vh;
            background: url(images/background.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-color: rgb(15 15 16 / 92%);
            background-blend-mode: overlay;
            display: flex;
            justify-content: center;
            align-items: center;
            height: fit-content;
        }

        
        .home img {
            max-width: 310px;
            border-radius: 80px;
            margin-right: 35px;
            margin-top: 35px;
            margin-bottom: 35px;
        }
        .home-about{
            max-width: 50%;
        }
        .home-about h2 {
            font-size: 49px;
            color: white;
            font-weight: bold;
            padding: 20px;
        }

        .home-about p {
            color: white;
            font-family: cursive;
            padding-left: 10px;
            font-size: 20px;
            width: 80%;
        }
        .home .learn{
            position: absolute;
            bottom: 0;
        }
        @media(max-width: 850px) {
            .home {
                flex-direction: column;
            }

            .home-about{
                max-width: 100%;
            }

            .home img {
                margin-bottom: 30px;
                margin-right: 0px;
            }

            .home .learn{
                position: relative;
            }

        }
       
        .cta-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: rgb(37, 119, 233);
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .cta-button:hover {
            background-color: rgba(92, 92, 221, 0.836);
            color: white;
            text-decoration: none;
        }
    </style>
